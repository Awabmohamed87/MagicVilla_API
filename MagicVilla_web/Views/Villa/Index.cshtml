@model List<VillaDTO>


<div class="container p-4 border">
    <div class="row pb-2">
        <div class="column">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Villa</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupancy</th>
                <th>Price</th>
                <th>Manage</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var villa in Model)
            {
                <tr>
                    <td>@villa.Name</td>
                    <td>@villa.Occupancy</td>
                    <td>@villa.Rate.ToString("c")</td>
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@villa.Id" class="btn btn-outline-success"><i class="bi bi-pencil-fill"></i> Edit</a>
                        <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@villa.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i> Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>